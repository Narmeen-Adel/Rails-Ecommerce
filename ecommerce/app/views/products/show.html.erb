<div class="container" style="margin-top:100px">
	<div class="row">
		<!-- Product Image -->
		<div class="col-lg-6">
			<div style="width:100%">
				<% if @product.image.attached? %>
            <%= image_tag @product.image ,style:"width:100%;border-radius:30px;"%>
        <% end %>
							
			</div>
		</div>
    <!-- Product Info -->
		<div class="col-lg-6 text-center">
			<div style="margin-left:20px;">
				<h2  style="color:#4a4a96;"><%= @product.title %></h2>
        <br>
        <h4 style="color:#4a4a96;">Description: <%= @product.description %></h4>
        <h4 style="color:#4a4a96;">Price: $ <%= @product.price %></h4>
        <h4 style="color:#4a4a96;">Brand: <%= @product.product_brand %></h4>
        <h4 style="color:#4a4a96;">Category: <%= @product.product_category %></h4>
      
        <h4 style="color:#4a4a96;"> Available Quantity: <%= @product.quantity_in_stock %></h4>
       <br>
       <br>
						<%= link_to "Add to cart", carts_path(:product_id => @product.id) ,class:"btn btn-success" %>	
            
            <%= link_to 'Back', products_path  ,class:"btn btn-warning"%>
            
            <br><br>

            <%= link_to 'Edit', edit_product_path(@product),class:"btn btn-outline-primary" %>  

				</div>
			</div>

		</div>
	</div>

