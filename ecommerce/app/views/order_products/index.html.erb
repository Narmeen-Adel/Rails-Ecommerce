<div class="container">
<p id="notice"><%= notice %></p>

<h2 style="color:#4a4a96;">Orders</h2>
<br>

  <table class="table">
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Actual price</th>
      <th>Status</th>
      <th>Show</th>

      <th>update status</th>
      <th>delete order</th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @order_products.each do |order_product| %>
      <tr>
        <td><%= order_product.order_id %></td>
        <td><%= order_product.product_id %></td>
        <td><%= order_product.quantity %></td>
        <td><%= order_product.unit_price %></td>
        <td><%= order_product.actual_price %></td>
         <td><%= order_product.status %></td>
        <td><%= link_to 'Show', order_product %></td>
        <td><%= link_to 'Edit status', edit_order_product_path(order_product) %></td>
        <td><%= link_to 'Destroy', order_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order Product', new_order_product_path %>
</div>