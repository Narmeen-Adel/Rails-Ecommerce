<div class="container" style="margin-top: 25px; margin: auto;">
<h2 style="color:#4a4a96; margin-top:20px;" class=" text-center">New Order</h2>
<br>
<div style="width:50%;">
<%= render 'form', order: @order %>
</div>

<div class="alert alert-error">
      <% flash.each do |key, value| %>
        <div class="alert alert-warning" role="alert"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
<br><br>
<%= link_to 'Back', orders_path %>
</div>
